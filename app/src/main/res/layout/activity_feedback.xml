<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    tools:context=".activities.FeedbackActivity">

    <LinearLayout
        android:id="@+id/main_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_here_your_feedback"
            android:textColor="?attr/textStyle"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:text="@string/tell_us_what_you_think"
            android:textColor="#ca898585"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_gray"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:textColor="@android:color/black"
            android:minLines="4"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/nome_optional"
            android:textColor="#ea898585"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_gray"
            android:maxLines="1"
            android:padding="@dimen/_3sdp"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="5dp"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/email_optional"
            android:textColor="#ea898585"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_gray"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor,TextFields" />


    </LinearLayout>

</ScrollView>