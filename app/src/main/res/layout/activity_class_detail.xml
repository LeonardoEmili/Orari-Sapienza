<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClassDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_14sdp"
            android:text="Aula C"
            android:paddingEnd="0dp"
            android:textColor="@color/coolBlack"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/building_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="0dp"
            android:text="Plesso didattico Giorgio Tecce"
            android:textColor="@color/coolBlack"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/building_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="0dp"
            android:textColor="@color/coolBlack"
            android:textSize="@dimen/_13sdp" />

        <com.airbnb.android.airmapview.AirMapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/current_status"
                    android:textColor="@color/coolBlack"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/lesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/_course"
                    android:textColor="@color/coolBlack"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/_time"
                    android:textColor="@color/coolBlack"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/professor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_14sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/professor"
                    android:textColor="@color/coolBlack"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#db930000"
                    android:text="@string/not_available"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_lesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/class_timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_professor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/ad_layout" />

</RelativeLayout>